<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE tiles-definitions PUBLIC 
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">  
 <tiles-definitions>  
 	<!-- HomeController 에서 viewName을 home.tiles 로 줄 예정 -->
	<definition name="tilesLayout" template="/WEB-INF/views/templates/layout.jsp">
		<put-attribute name="title" value="pawPadSmell"/>
		<put-attribute name="header" value="/WEB-INF/views/templates/header.jsp"/>
		<put-attribute name="content" value=""/>
		<put-attribute name="footer" value="/WEB-INF/views/templates/footer.jsp"/>
	</definition>
	<definition name="tilesLayout2" template="/WEB-INF/views/templates/layout2.jsp">
		<!-- <put-attribute name="title" value="pawPadSmell"/> -->
		<put-attribute name="header2" value="/WEB-INF/views/templates/header2.jsp"/>
		<put-attribute name="content2" value=""/>
	</definition>
	<!-- <definition name="main2.tiles" extends="home.tiles">
		<put-attribute name="main" value="/WEB-INF/views/main2.jsp"/>
	</definition> -->
	<!-- 		
			definition name="*.tiles"
							   * 가 {1} 정보로 할당된다 
							   만약 Controller에서 viewName을 main2.tiles로 주면 
							   main2.jsp가 메인으로 제공된다 
			사례) HomeController 의 메서드 
			      @RequestMapping("main2.do")
					public String main2() {
						return "main2.tiles";
					}				   
	 -->
	<!-- <definition name="*.tiles" extends="tilesLayout">
		<put-attribute name="title" value="{1}"/>
		<put-attribute name="content" value="/WEB-INF/views/{1}.jsp"/>
	</definition> -->
	<definition name="*/*.tiles" extends="tilesLayout">
		<!-- <put-attribute name="title" value="{2}"/> -->
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
	<definition name="*/*.tiles2" extends="tilesLayout2">
		<!-- <put-attribute name="title" value="{2}"/> -->
		<put-attribute name="content2" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
 </tiles-definitions>   
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 